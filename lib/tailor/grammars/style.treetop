grammar Style
	rule parent
		(line)* {
			def values
				lines = []
				elements.each do |e|
					lines << [:line, e.text_value]
				end
				lines
			end
		}
	end

	rule line
		any_content newline {
			def line_content
				any_content.the_content
			end
		}
	end

	rule any_content
		[^\n]* {
			def the_content
				text_value
			end
		}
	end

	rule newline
		"\r\n" / [\n\r]
	end
end